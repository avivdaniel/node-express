<%- include ("partials/header.ejs") %>

<div class="container d-flex flex-column align-items-center flex-md-row-reverse justify-content-md-around bg-white">
    <div class="form-container text-center">
        <h1>Login</h1>
        <form action="/user/login" method="POST">
            <div class="py-2">
                <label for="email">Email:</label>
                <input type="email" placeholder="type your email" name="email" id="email" required />
            </div>
            <div class="py-2">
                <label for="password">Password:</label>
                <input type="password" placeholder="Enter Password" name="password" id="password" required />
            </div>
            <div class="py-2">
                <button class="submit" type="submit">Login</button>
            </div>
        </form>
        <a href="/user">Register</a>
    </div>
    <div class="text-center login-img">
    </div>
</div>

<%- include ("partials/footer.ejs") %>